

<table class="table table-hover">
  <thead>
    <tr class="table-active"> 
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if current_user == friend.user%>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user.id %></td>
        <td><%= link_to 'Show', friend ,class:"btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) ,class:"btn btn-primary"%></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger"%></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path,class:"btn btn-success" %>
